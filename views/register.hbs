{{#if error}}
<div class="alert alert-danger" role="alert">
  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
  <span class="sr-only">Error:</span>
  {{error}}
</div>
{{/if}}
<form method="POST" style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
  <h3>Register</h3>
  <div class="form-group">
    <label>Username</label>
    <input type="text" name="username" class="form-control">
  </div>
  <div class="form-group">
    <label>Password</label>
    <input type="password" name="password" class="form-control">
  </div>
  <div class="form-group">
    <label>Repeat password</label>
    <input type="password" name="password2" class="form-control">
  </div>
  <div class="form-group">
    <label>Email</label>
    <input type="text" name="email" class="form-control">
  </div>
  <div class="form-group">
    <label>Phone #</label>
    <input type="text" name="phone" class="form-control">
  </div>
  <div class="form-group">
    <label>Street Address</label>
    <input type="text" name="street" class="form-control">
  </div>
  <div class="form-group">
    <label>City</label>
    <input type="text" name="city" class="form-control">
  </div>
  <div class="form-group">
    <label>State/Province</label>
    <input type="text" name="state" class="form-control">
  </div>
  <div class="form-group">
    <label>Postal Code</label>
    <input type="text" name="postal" class="form-control">
  </div>
  <div class="form-group">
    <label>First Name</label>
    <input type="text" name="name_first" class="form-control">
  </div>
  <div class="form-group">
    <label>Last Name</label>
    <input type="text" name="name_last" class="form-control">
  </div>

  <div class="form-group">
    <button class="btn btn-success">Register</button>
    <a class="btn btn-primary" href="/login">Login</a>
  </div>
</form>
