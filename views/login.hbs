{{#if error}}
<div class="alert alert-danger" role="alert">
  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
  <span class="sr-only">Error:</span>
  {{error}}
</div>
{{/if}}
<body class='rainbowRocket'>
  <div>
    <form method="POST" style="max-width: 350px; margin: auto; margin-top: 100px; border: 0.5px solid gray; background-color: white; padding: 30px 30px 30px 30px">
      <center>
        <img class="resize-logo" src='https://i.imgur.com/Xsk67RZ.png'>
      </center>
      <div class="form-group">
        <label>Username</label>
        <input type="text" name="username" class="form-control">
      </div>
      <div class="form-group">
        <label>Password</label>
        <input type="password" name="password" class="form-control">
      </div>
      <center>
        <div class="form-group">
          <button class="btn btn-success">Login</button>
          <a class="btn btn-primary" href="/register">Register</a>
        </div>
      </center>
    </form>
  </div>
</body>
