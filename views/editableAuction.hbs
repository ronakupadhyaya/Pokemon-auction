<form method="POST" style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
  <h3>Auction #{{id}}</h3>
  <img src={{auction.image_url}} alt="">
  <div class="form-group">
    <label>Pokemon name: {{auction.name}}</label>
  </div>
  <div class="form-group">
    {{#if highestBid.amount}}
    <label>Current Bid: ${{highestBid.amount}} by {{highestBid.username}}</label>
    {{else}}
    <label>Starting Bid: ${{auction.opening_bid}}</label>
    {{/if}}
  </div>
  <div class="form-group">
    <label>Reserve Price: ${{auction.reserve_price}}</label>
  </div>
  <div class="form-group">
    <label>Shipping Info</label>
    <input type="text" name="shipping_location" class="form-control" value={{auction.shipping_location}}>
  </div>
  <div class="form-group">
    <label>Description</label>
    <textarea name="description" rows="4" cols="31" style="resize:none">{{auction.description}}</textarea>
  </div>
  <div class="form-group">
    <label>Time Remaining</label>
    <input type="number" name="length" class="form-control" minimum="1" value={{auction.length}}>
  </div>

  <div class="form-group">
    <button class="btn btn-success">Save</button>
  </div>
  <ul>
    {{#each bids}}
      <li>${{amount}} by {{username}}</li>
    {{/each}}
  </ul>
</form>
<a href="/auctions/{{id}}/delete">
  <button class="btn btn-danger">DELETE</button>
</a>
<a href="/dashboard">
  <button class="btn btn-danger">GO BACK</button>
</a>
