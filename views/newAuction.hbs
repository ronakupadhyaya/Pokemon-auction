<form method="POST" style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
  <h3>New Auction</h3>
  <div class="form-group">
    <label>Starting Bid</label>
    <input type="number" name="starting_bid" class="form-control">
  </div>
  <div class="form-group">
    <label>Reserve Price</label>
    <input type="number" name="reserve_price" class="form-control">
  </div>
  <div class="form-group">
    <label>Shipping From</label>
    <input type="text" name="shipping_location" class="form-control">
  </div>
  <div class="form-group">
    <label>Description</label>
    <input type="text" name="description" class="form-control">
  </div>
  <div class="form-group">
    <label>Auction Length</label>
    <input type="number" name="Time" class="form-control">
  </div>
  <div class="form-group">
    <button class="btn btn-success">Create Auction</button>
    <a class="btn btn-primary" href="/dashboard">Cancel</a>
  </div>
</form>
