{{#if error}}
<div class="alert alert-danger" role="alert">
  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
  <span class="sr-only">Error:</span>
  {{error}}
</div>
{{/if}}
<form method="POST" style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
  <h3>New Auction</h3>
  <div class="form-group">
    <label>Pokemon</label>
    <select name="pokemon" placeholder="Select a pokemon">
    {{#each pokemon}}
      <option value="{{id}}">{{name}}</div>
    {{/each}}
    </select>
  </div>
  <div class="form-group">
    <label>Opening Bid</label>
    <input type="float" name="opening_bid" class="form-control">
  </div>
  <div class="form-group">
    <label>Reserve Price</label>
    <input type="float" name="reserve_price" class="form-control">
  </div>
  <div class="form-group">
    <label>Shipping From</label>
    <input type="text" name="shipping_location" class="form-control">
  </div>
  <div class="form-group">
    <label>Description</label>
    <input type="text" name="description" class="form-control">
  </div>
  <div class="form-group">
    <label>Start date/time</label>
    <input type="datetime-local" name="start_time" class="form-control">
  </div>
  <div class="form-group">
    <label>End date/time</label>
    <input type="datetime-local" name="end_time" class="form-control">
  </div>
  <div class="form-group">
    <button class="btn btn-success">Create Auction</button>
    <a class="btn btn-primary" href="/dashboard">Cancel</a>
  </div>
</form>
