<form method="POST" style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
  <h3>New Auction</h3>
  <div class="form-group">
    <label>Pokemon name</label>
    <select name="pokemon_id">
      {{#each pokemons}}
        <option value="{{id}}">{{name}}</option>
      {{/each}}
    </select>
  </div>
  <div class="form-group">
    <label>Starting Bid</label>
    <input type="text" name="opening_bid" class="form-control">
  </div>
  <div class="form-group">
    <label>Reserve Price</label>
    <input type="text" name="reserve_price" class="form-control">
  </div>
  <div class="form-group">
    <label>Shipping Info</label>
    <input type="text" name="shipping_location" class="form-control">
  </div>
  <div class="form-group">
    <label>Description</label>
    <textarea name="description" rows="4" cols="31" style="resize:none"></textarea>
  </div>
  <div class="form-group">
    <label>Length</label>
    <input type="number" name="length" class="form-control" minimum="1">
  </div>

  <div class="form-group">
    <button class="btn btn-success">Save</button>
  </div>
</form>
<a href="/dashboard">
  <button class="btn btn-danger">Cancel</button>
</a>
