<div class='profile'>
  <div class ='welcome'>
    <h1 >
      Hi {{info.username}}, take a long, hard look at your life choices - you disgusting swine!
      I bet you only catch god damn rattatas... They are rodents, and you should know better.
    </h1>
    <div class="info-box">
      <div class="profile-info">
        <div class="info-container">
          <div >
            Email: {{info.email}}
          </div>
          <div class="">
            Phone Number: {{info.phone_number}}
          </div>
          <div class="">
            Address: {{info.street_address}}, {{info.city}}, {{info.state}}, {{info.zipcode}}
          </div>
        </div>
        <div class="button-center">
          <button type="button" name="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">EDIT INFO</button>
        </div>
      </div>
    </div>
  </div>
  <form action="dashboard" method="get">
    <submit><button class="btn btn-default return-to-dash">Back to dashboard</button></submit>
  </form>

</div>

<!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Edit Info for {{info.username}}</h4>
        </div>
        <div class="modal-body">
          <form class="editProfile" method="post">
            <div class="form-group password-prompt">
              <label>You must enter your current password to make changes</label>
              <input type="text" name="password" >
            </div>
            <div class="form-contents">
              <div class="form-group">
                <label>email</label>
                <input type="text" name="email" value={{info.email}}>
              </div>
              <div class="form-group">
                <label>phone number</label>
                <input type="text" name="phone_number" value={{info.phone_number}}>
              </div>
              <div class="form-group">
                <label>address</label>
                <input type="text" name="street_address" value={{info.street_address}}>
              </div>
              <div class="form-group">
                <label>city</label>
                <input type="text" name="city" value={{info.city}}>
              </div>
              <div class="form-group">
                <label>state</label>
                <input type="text" name="state" value={{info.state}}>
              </div>
              <div class="form-group">
                <label>zipcode</label>
                <input type="text" name="zipcode" value={{info.zipcode}}>
              </div>
              <div class="form-group">
                <label>new password</label>
                <input type="text" name="newPassword" >
              </div>
              <div class="form-group">
                <label>repeat new password</label>
                <input type="text" name="repeatPassword" >
              </div>
              <submit><button class="btn btn-danger">Confirm Changes</button> </submit>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
