<div style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
  <h3>Auction #{{id}}</h3>
  <img src={{auction.image_url}} alt="">
  <div class="form-group">
    <label>Pokemon name: {{auction.name}}</label>
  </div>
  <div class="form-group">
    <label>Starting Bid: ${{auction.opening_bid}}</label>
  </div>
  <div class="form-group">
    <label>Reserve Price: ${{auction.reserve_price}}</label>
  </div>
  <div class="form-group">
    <label>Shipping Info: {{auction.shipping_location}}</label>
  </div>
  <div class="form-group">
    <label>Description: {{auction.description}}</label>
  </div>
  <div class="form-group">
    <label>Time Remaining: {{auction.length}}</label>
  </div>
</div>

<a href="/dashboard">
  <button class="btn btn-danger">GO BACK</button>
</a>
